{
  "name": "solomon",
  "version": "0.0.2",
  "description": "Blog Site for PoiScript",
  "license": "MIT",
  "repository": "git@github.com:PoiScript/Solomon.git",
  "author": "PoiScript <poiscript@gmail.com>",
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "amp:start": "nodemon amp/scripts/server.js",
    "amp:build": "node amp/scripts/extra.js",
    "ng:start": "cd ng && yarn start",
    "ng:build": "cd ng && yarn build",
    "react:start": "cd react && react-scripts start",
    "react:build": "bash scripts/build-react.sh",
    "react:watch-scss": "cd react && node-sass-chokidar src/ -o src/ && node-sass-chokidar src/ -o src/ --watch --recursive",
    "react:test": "cd react && react-scripts test --env=jsdom",
    "react:eject": "cd react && react-scripts eject",
    "generate:amp": "node scripts/generate-amp",
    "generate:post": "node scripts/generate-post",
    "generate:rss": "node scripts/generate-rss"
  },
  "private": true,
  "dependencies": {
    "express": "^4.15.3",
    "firebase": "^4.1.2",
    "marked": "^0.3.6",
    "material-ui": "^0.18.2",
    "node-sass": "^4.5.3",
    "pug": "^2.0.0-rc.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-flexbox-grid": "^1.1.3",
    "react-helmet": "^5.1.3",
    "react-router-dom": "^4.1.1",
    "react-snapshot": "^1.1.0",
    "react-tap-event-plugin": "^2.0.1",
    "rss": "^1.2.2",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "cheerio": "^1.0.0-rc.1",
    "html-minifier": "^3.5.2",
    "jstransformer-scss": "^0.1.4",
    "node-sass-chokidar": "^0.0.2",
    "nodemon": "^1.11.0",
    "react-scripts": "1.0.7",
    "standard": "^10.0.2"
  }
}
